<h1>Editing Book</h1>
    <% if @book.errors.any? %>
        <h4><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
    <% end %>
<%= form_with model:@book,url:book_path(@book.id),local:true do |f| %>
    <div class="field">Title</div>
    <%= f.text_field:title %>
    <div class="field">Body</div>
    <%= f.text_area:body %>
    <div class="actions"><%= f.submit'Update Book' %></div>
<% end %>
<%= link_to"Show",book_path(@book.id) %>
